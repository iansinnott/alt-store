global-reset()

// Typography {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

@require 'typographic'

@require 'typographic'

// Typographic defaults, just for reference.
$line-height-ratio  = 1.75
$header-ratio       = $golden
$body-font          = $helvetica
$body-font-weight   = 300
$body-color         = #666
$header-font        = $helvetica
$header-font-weight = 500
$header-color       = #111
$min-font           = 13px
$max-font           = 20px
$min-width          = 600px
$max-width          = 1000px
$vertical-rhythm    = true

// Custom Typographic styling
$line-height-ratio  = 1.5
$body-font-weight   = 400

typographic()

strong
  font-weight bold

// }}} END Typography

// Vars {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

mono = Consolas, 'Liberation Mono', Menlo, Courier, monospace

light-gray = #E7E6E4
off-white = #EDEDEF
border-gray = #979797
text-black = #5F5F5F

// }}} END Vars

// General {{{
// - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

*
  box-sizing border-box

body
  background off-white
  color text-black

li
  list-style disc

pre
  font-family mono
  line-height 1.5
  border-radius 3px
  border 1px solid border-gray

a
  color blue
  text-decoration none
  &:hover
    text-decoration underline

// }}} END General

span.temp
  border 1px solid red
  color red
  padding 20px
  display block

ul
  margin 0
  padding 0

li
  margin 0
  padding 0
  list-style none

a
  text-decoration none
  &:hover
    text-decoration none


.btn
  display block
  margin-top 10px
  background blue
  color white
  padding 10px 0
  cursor pointer


.item
  display inline-block
  vertical-align top
  width 300px
  text-align center
  background white
  margin-bottom 20px
  border 1px solid #ddd
  border-radius 3px
  padding 20px

  .item-name
    margin-top 20px

    &.disabled
      background gray
      pointer-events none

    &:hover
      background green


  img
    display inline-block
    max-width 100%
    max-height 200px

  .controls
    a
      display block
      font-size 20px
      border none
      background blue
      color white
      font-weight bold
      padding 6px 14px
      outline none
      border-radius 3px
      margin-bottom 0
      cursor pointer

      &:hover
        background darken(blue, 5%)
        text-decoration none

      &:first-child
        margin-bottom 10px

    .details
      background #dadada
      color black
      &:hover
        background darken(#dadada, 5%)

    .price
      font-weight bold
      font-size 38px
      margin-bottom 10px

.container
  clearfix()
  position relative
  padding 0 20px
  margin 0 auto
  max-width 940px

.header
  background lighten(gray, 20%)

  .site-name
    margin 0
    padding 0
    font-size 24px
    font-weight bold
    color black
    float left
    line-height 50px

    &:hover
      color blue

  nav
    float right

    li
      display inline-block

      &:first-child
        margin-left 0

    a
      display inline-block
      padding 0 10px
      line-height 50px

      &:hover
        background gray

    .active
      background gray

.CartDisplay
  i
    margin-right 10px
    margin-left 10px
    display inline-block

  span
    display inline-block

  .cart
    font-weight bold
    margin-right 10px

  .qty
    margin-right 10px
